#!/usr/bin/env bash
set -euo pipefail

echo "initialization pgcontents"
pgcontents init --no-prompt -l ${DATABASE_URL/postgres:/postgresql:} || exit 1

echo "pgcontents initialized"


echo "Starting JupyterLab on Scalingo"

DB_URL="${DATABASE_URL:-}"
if [ -z "$DB_URL" ] && [ -n "${SCALINGO_POSTGRESQL_URL:-}" ]; then
  DB_URL="$SCALINGO_POSTGRESQL_URL"
fi

echo "DATABASE_URL is ${DB_URL:-<unset>}"





echo "Starting Jupyter Lab"
exec jupyter lab \
  --no-browser \
  --ServerApp.ip=0.0.0.0 \
  --ServerApp.port="${PORT:-8888}" \
  --ServerApp.token="${JUPYTER_TOKEN:-}" \
  --config=/app/jupyter_notebook_config.py
